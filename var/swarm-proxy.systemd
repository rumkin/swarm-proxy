[Unit]
Description=Swarm Proxy Service
After=network.target

[Service]
User=swarm-proxy
Group=swarm-proxy
WorkingDirectory=/var/www/swarm-proxy
Type=forking

Restart=always
ExecStart=/usr/bin/node /home/buddy/projects/swarm-proxy/cli.js start
ExecStop=/usr/bin/node /home/buddy/projects/swarm-proxy/cli.js stop
ExecReload=/usr/bin/node /home/buddy/projects/swarm-proxy/cli.js reload
ExecStartPre=/bin/bash /home/buddy/projects/swarm-proxy/bin/before-start.sh

[Install]
WantedBy=multi-user.target
